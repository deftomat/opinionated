{
  "name": "@deftomat/opinionated",
  "version": "0.7.0",
  "publishConfig": {
    "registry": "https://registry.npmjs.org"
  },
  "description": "Opinionated tooling for JavaScript & TypeScript projects.",
  "license": "MIT",
  "repository": "github:deftomat/opinionated",
