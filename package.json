    "babel-eslint": "^10.1.0",
    "chalk": "^4.1.0",
    "commander": "^7.0.0",
    "configstore": "^5.0.1",
    "del": "^6.0.0",
    "eslint": "^7.19.0",
    "eslint-plugin-import": "^2.22.1",
    "eslint-plugin-react": "^7.22.0",
