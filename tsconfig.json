{
  "extends": "./configs/tsconfig.json",
  "compilerOptions": {
    "lib": ["ES2023"],
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "skipLibCheck": true,
    "sourceMap": false,
    "target": "ES2021",
    "outDir": "./dist/esm",
    "declaration": false,
    "resolveJsonModule": true
  },
  "exclude": ["node_modules", "./configs", "./dist", "./bin"]
}
