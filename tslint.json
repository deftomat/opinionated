{
  "rulesDirectory": [
    "tslint-consistent-codestyle",
    "tslint-microsoft-contrib",
    "tslint-react/rules"
  ],
  "defaultSeverity": "warning",
  "rules": {
    "adjacent-overload-signatures": true,
    "arrow-return-shorthand": true,
    "await-promise": true,
    "callable-types": true,
    "class-name": true,
    "early-exit": true,
    "forin": true,
    "interface-over-type-literal": true,
    "jsx-boolean-value": [true, "never"],
    "jsx-key": true,
    "label-position": true,
    "member-ordering": [true, { "order": ["instance-field", "instance-method"] }],
    "no-accessor-recursion": true,
    "no-angle-bracket-type-assertion": true,
    "no-arg": true,
    "no-console": [true, "debug", "log", "time", "timeEnd", "trace", "table"],
    "no-constant-condition": true,
    "no-construct": true,
    "no-debugger": true,
    "no-duplicate-super": true,
    "no-duplicate-switch-case": true,
    "no-duplicate-variable": true,
    "no-dynamic-delete": true,
    "no-empty": [true, "allow-empty-catch"],
    "no-empty-interface": true,
    "no-eval": true,
    "no-for-in-array": true,
    "no-inferrable-types": [true, "ignore-params"],
    "no-internal-module": true,
    "no-invalid-this": [true, "check-function-in-method"],
    "no-misused-new": true,
    "no-namespace": true,
    "no-object-literal-type-assertion": true,
    "no-parameter-reassignment": true,
    "no-redundant-jsdoc": true,
    "no-reference": true,
    "no-reference-import": true,
    "no-return-await": true,
    "no-return-undefined": true,
    "no-string-throw": true,
    "no-switch-case-fall-through": true,
    "no-this-assignment": [true, { "allow-destructuring": true }],
    "no-unnecessary-bind": true,
    "no-unnecessary-class": [true, "allow-constructor-only", "allow-empty-class"],
    "no-unnecessary-else": true,
    "no-unnecessary-initializer": true,
    "no-unnecessary-override": true,
    "no-unnecessary-type-assertion": true,
    "no-unused-expression": [true, "allow-fast-null-checks"],
    "no-var-before-return": [true, "allow-destructuring"],
    "no-var-keyword": true,
    "no-var-requires": true,
    "no-void-expression": [true, "ignore-arrow-function-shorthand"],
    "object-literal-shorthand": true,
    "one-variable-per-declaration": [true, "ignore-for-loop"],
    "prefer-const": true,
    "prefer-for-of": true,
    "prefer-function-over-method": true,
    "prefer-object-spread": true,
    "prefer-switch": [true, { "min-cases": 3 }],
    "prefer-template": [true, "allow-single-concat"],
    "triple-equals": [true, "allow-null-check"],
    "unified-signatures": true,
    "use-default-type-parameter": true,
    "use-isnan": true,
    "variable-name": [true, "allow-leading-underscore", "allow-pascal-case", "check-format"]
  },
  "jsRules": {
    "arrow-return-shorthand": true,
    "class-name": true,
    "early-exit": true,
    "forin": true,
    "label-position": true,
    "member-ordering": [true, { "order": ["instance-field", "instance-method"] }],
    "no-accessor-recursion": true,
    "no-arg": true,
    "no-console": [true, "debug", "log", "time", "timeEnd", "trace", "table"],
    "no-constant-condition": true,
    "no-construct": true,
    "no-debugger": true,
    "no-duplicate-super": true,
    "no-duplicate-switch-case": true,
    "no-duplicate-variable": true,
    "no-dynamic-delete": true,
    "no-empty": [true, "allow-empty-catch"],
    "no-eval": true,
    "no-for-in-array": true,
    "no-invalid-this": [true, "check-function-in-method"],
    "no-parameter-reassignment": true,
    "no-reference": true,
    "no-return-await": true,
    "no-return-undefined": true,
    "no-string-throw": true,
    "no-switch-case-fall-through": true,
    "no-this-assignment": [true, { "allow-destructuring": true }],
    "no-unnecessary-bind": true,
    "no-unnecessary-class": [true, "allow-constructor-only", "allow-empty-class"],
    "no-unnecessary-else": true,
    "no-unnecessary-initializer": true,
    "no-unnecessary-override": true,
    "no-unused-expression": [true, "allow-fast-null-checks"],
    "no-var-before-return": [true, "allow-destructuring"],
    "no-var-keyword": true,
    "no-void-expression": [true, "ignore-arrow-function-shorthand"],
    "object-literal-shorthand": true,
    "one-variable-per-declaration": [true, "ignore-for-loop"],
    "prefer-const": true,
    "prefer-for-of": true,
    "prefer-function-over-method": true,
    "prefer-object-spread": true,
    "prefer-switch": [true, { "min-cases": 3 }],
    "prefer-template": [true, "allow-single-concat"],
    "triple-equals": [true, "allow-null-check"],
    "use-isnan": true,
    "variable-name": [true, "allow-leading-underscore", "allow-pascal-case", "check-format"]
  }
}
